package ejercicio.biblioteca.pkg17.pkg02.pkg2020;

import java.util.Scanner;

/**
 *
 * @author gfrieri
 */
public class EjercicioBiblioteca17022020 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        Scanner leer = new Scanner(System.in);

        int cod, op, salir, conteo, sal2, z;
        int B[][] = new int[10][3];

        for (int x = 0; x < 10; x++) {
            B[x][0] = -1;
        }

        salir = 0;

        System.out.println("Bienvenido a organizador de biblioteca");
        System.out.println("");

        while (salir == 0) {
            System.out.print("Ingrese el código del libro que desea buscar: ");
            cod = leer.nextInt();
            op = 2;
            conteo = 0;
            sal2 = 2;
            z = 0;

            while (op == 2) {

                if (cod == B[z][0]) {
                    System.out.println("El código ingresado es: " + B[z][0]);
                    System.out.println("El código de ubicación es: " + B[z][1]);
                    System.out.println("El código interno es: " + B[z][2]);

                    System.out.println("\n Si desea buscar otro libro digite 2");
                    System.out.println("Si desea salir digite 1");
                    System.out.print("\n Ingrese aquí su opción deseada: ");
                    op = leer.nextInt();
                }

                if (cod != B[z][0] && z == 9) {
                    System.out.println("\n El código ingresado no existe. ¿Desea añadir un nuevo libro?");
                    System.out.println("Digite 0 para si");
                    System.out.println("Digite 1 para no");
                    System.out.print("\n Ingrese aquí su opción deseada: ");
                    op = leer.nextInt();
                }
                z = z + 1;
            }

            if (op == 0) {
                z=0;
                while (z < 10 || sal2 != 0 || sal2 != 1) {

                    if (B[z][0] == -1) {
                        System.out.println("");
                        
                        System.out.print("Ingrese el código del libro: ");
                        B[z][0] = leer.nextInt();
                        System.out.print("Ingrese el código de ubicación: ");
                        B[z][1] = leer.nextInt();
                        System.out.print("Ingrese el código interno: ");
                        B[z][2] = leer.nextInt();

                        System.out.println("\n Si desea buscar otro libro digite 0");
                        System.out.println("Si desea salir digite 1");
                        System.out.print("\n Ingrese aquí su opción deseada: ");
                        sal2 = leer.nextInt();
                    } else {
                        z = z + 1;
                    }
                }
            } else {
                if (op == 1) {
                    System.out.println("Gracias por utilizar nuestros servicios");

                    System.out.println("\n Si desea buscar otro libro digite 0");
                    System.out.println("Si desea salir digite 1");
                    System.out.print("\n Ingrese aquí su opción deseada: ");
                    salir = leer.nextInt();
                }
            }
        }
    }
}
